/* Advent of code, day 2, puzzle 1
   Numpad directions */
instructions = 'ULL RRDDD LURDL UUUUD'
instructions = '    '

directions.u = -1
directions.d = +1
directions.l = -1
directions.r = +1

position = 5 ; code = ''
hsteps=0 ; vsteps=0
do while instructions \= ''
	parse var instructions line instructions
	do while line \= ''
		parse var line dir +1 line
		select
			when dir == 'R' | dir == 'L' then do
				if abs(hsteps + directions.dir) > 1 then iterate
				hsteps = hsteps + directions.dir
				position = position + directions.dir
			end
			otherwise do
				if abs(vsteps + directions.dir) > 1 then iterate
				vsteps = vsteps + directions.dir
				position = position + (3*directions.dir)
			end
		end
	end
	code = code || position
end
say 'code:' code
